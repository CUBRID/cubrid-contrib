		(
			RECORD_CENTER_ID,
			JOB_ID,
			SRC_FILE_ID,
			DEST_FILE_ID,
			DEST_FILE_NM,
			DEST_FILE_SIZE,
			DEST_STORAGE_TYPE,
			DEST_STORAGE_VENDOR,
